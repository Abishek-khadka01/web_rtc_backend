{
  "compilerOptions": {
    "module": "CommonJS",            // Use CommonJS module system
    "moduleResolution": "node",      // Use Node.js module resolution
    "target": "ESNext",              // Modern JavaScript target
    "esModuleInterop": true,         // Ensure compatibility with CommonJS
    "strict": true,                  // Enable strict type checking
    "skipLibCheck": true,            // Skip checking library types (improves build speed)
    "outDir": "./dist",              // Output directory for compiled files
    "baseUrl": "./src", 
  "allowJs": true,
"resolveJsonModule": true
  }
}
