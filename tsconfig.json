{
  "compilerOptions": {
    "target": "ESNext",                          // Specifies the ECMAScript target version (e.g., es6, esnext)
    "module": "NodeNext",                     // Specifies the module code generation (e.g., commonjs, es6)
    "lib": ["ESNext"],                        // Specifies the library files to include
    "allowJs": true,                          // Allow JavaScript files to be compiled
    "checkJs": true,                          // Check JavaScript files for errors
    "strict": true,                           // Enable all strict type-checking options
    "esModuleInterop": true,                  // Enables `import` syntax for non-ES module imports
    "skipLibCheck": true,                     // Skip type checking of all declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "outDir": "./dist",                       // Redirect output structure to a specified directory
    "rootDir": "./src",                       // Specify the root directory of your source code
    "resolveJsonModule": true,                // Allows importing `.json` files
    "noImplicitAny": true,                    // Raise error on expressions with an implicit 'any' type
    "moduleResolution": "nodenext",               // Determines how modules get resolved (e.g., node)
    "strictNullChecks": true,                 // Enable strict null checks
    "isolatedModules": true,                  // Ensure each file can be safely transpiled without type checking other files
    "noEmitOnError": true,                    // Prevent the output of JavaScript files when there are compilation errors
    "sourceMap": true,                        // Generates corresponding '.map' files for debugging
    "declaration": true,                      // Generates declaration files ('.d.ts') for your project
    "allowSyntheticDefaultImports": true,     // Allow default imports from modules without default exports
    "noUnusedLocals": true,                   // Report errors on unused local variables
    "noUnusedParameters": true                // Report errors on unused function parameters
  },
  "include": [
    "src/**/*.ts",                            // Include all TypeScript files in the 'src' folder
    "src/**/*.d.ts"                           // Include TypeScript declaration files
  ],
  "exclude": [
    "node_modules",                           // Exclude the 'node_modules' directory from the compilation
    "dist"                                    // Exclude the 'dist' directory where the output is stored
  ]
}
